{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Required for NestJS decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Aliases for shared libs
    "baseUrl": ".",
    "paths": {
      "@services/database": ["apps/api/libs/database/dist"],
      "@services/database/*": ["apps/api/libs/database/dist/*"],
      "@services/shared": ["apps/api/libs/shared/dist"],
      "@services/shared/*": ["apps/api/libs/shared/dist/*"],
      "@frontend/shared": ["apps/frontend/libs/shared/dist"],
      "@frontend/shared/*": ["apps/frontend/libs/shared/dist/*"]
    }
  }
}
